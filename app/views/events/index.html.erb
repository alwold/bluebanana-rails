<h1>Events</h1>

<table class="table">
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <% if user_signed_in? %>
        <td><%= link_to "Edit", edit_event_path(event), :class => "btn" %></td>
      <% end %>
      <td><%= link_to "View", attendees_path(event), :class => "btn" %></td>
    </tr>
  <% end %>
</table>
<%= link_to "New Event", new_event_path %>
