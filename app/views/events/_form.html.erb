<%= form_for @event do |f| %>
  <%= f.label :eventbrite_id, "Eventbrite ID" %>
  <%= f.text_field :eventbrite_id %>

  <span id="spinner" style="display: none;">
    <%= image_tag "spinner.gif" %>
  </span>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :start %>
  <%= f.text_field :start %>

  <%= f.label :end %>
  <%= f.text_field :end %>

  <%= f.label :hashtag %>
  <%= f.text_field :hashtag %>

  <%= f.label :latitude %>
  <%= f.text_field :latitude %>

  <%= f.label :longitude %>
  <%= f.text_field :longitude %>

  <%= f.label :foursquare_venue_id %>
  <%= f.text_field :foursquare_venue_id %>

  <p>
    <%= f.submit :class => "btn btn-primary" %>
  </p>
<% end %>